@model IEnumerable<OrderServiceChallenge.Models.OrderService>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>|
    <a asp-action="Search" id="cmd" class="btn btn-default">Search</a>|
    <a asp-action="Test" class="btn btn-default">Generate PDF</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.NumberOS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceTitle)
            </th>
            <th>
                Company Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecutionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceTitle)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>




